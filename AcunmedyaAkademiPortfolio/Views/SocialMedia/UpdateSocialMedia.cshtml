@model AcunmedyaAkademiPortfolio.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sosyal Medya Güncelleme Sayfası</h2>
<br />
<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)

    <label>Sosyal Medya Platformu</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
    <br />
    <label>Link</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Url)</span>
    <br />
    <label>İcon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Icon)</span>
    <br />

    <button class="btn btn-primary">Güncelle</button>

</form>


