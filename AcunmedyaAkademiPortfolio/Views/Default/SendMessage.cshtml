@model AcunmedyaAkademiPortfolio.Models.TblMessage
<div class="col-lg-7">
    <form action="/Default/SendMessage" method="post">
        <div class="row gy-4">

            <div class="col-md-6">
                <label for="name-field" class="pb-2">Ad Soyad</label>
                <input type="text" name="Name"  class="form-control" required="">
            </div>

            <div class="col-md-6">
                <label for="email-field" class="pb-2">Email Adresiniz</label>
                <input type="email" class="form-control" name="Email"  required="">
            </div>

            <div class="col-md-12">
                <label for="subject-field" class="pb-2">Konu</label>
                <input type="text" class="form-control" name="Subject"  required="">
            </div>

            <div class="col-md-12">
                <label for="message-field" class="pb-2">Mesajınız</label>
                <textarea class="form-control" name="MessageContent" rows="10"  required=""></textarea>
            </div>

            <div class="col-md-12 text-center">
               
                <button class ="btn btn-primary" type="submit">Mesajı Gönder</button>
            </div>

        </div>
    </form>
</div>
