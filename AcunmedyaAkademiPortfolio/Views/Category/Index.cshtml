@model List<AcunmedyaAkademiPortfolio.Models.TblCategory>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!DOCTYPE html>


    <h2>Kategoriler </h2>

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a> </td>
            </tr>
        }



    </table>

    <br />
    <a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

