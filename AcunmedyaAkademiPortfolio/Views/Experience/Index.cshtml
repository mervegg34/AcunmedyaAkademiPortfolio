@model List<AcunmedyaAkademiPortfolio.Models.TblExperience>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Okul/Şirket Adı</th>
        <th>Açıklama</th>
        <th>Fakülte/Bölüm</th>
        <th>Başlama Yılı</th>
        <th>Bitirme Yılı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    
    @foreach(var item in Model)
     {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.SchoolCompany</td>
            <td>@item.Description</td>
            <td>@item.Department</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td><a href="/Experience/DeleteExperience/@item.EducationId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/GetExperience/@item.EducationId" class="btn btn-info">Düzenle</a></td>
        </tr>
     }
</table>
<br />
<a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>
