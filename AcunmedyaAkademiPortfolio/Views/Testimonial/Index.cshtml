@model List<AcunmedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<h2>Referanslarım</h2>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>Yorum</th>
        <th>Fotoğraf Url</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td> <img src="@item.ImageUrl" style="width:75px;height=75px" alt="Fotoğraf" /></td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Düzenle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Referans Ekle</a>